@model IEnumerable<MoneyTrackerProject.Models.Department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    Use this section to create entries for the departments of the company.
    <br />
    <br />
    @if (User.IsInRole("Administrator"))
    {
        @Html.ActionLink("Create New", "Create");
    }
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentFund)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentFund)
        </td>
        <td>
            @if (User.IsInRole("Administrator"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.DepartmentId });
                <span> | </span>
                @Html.ActionLink("Details", "Details", new { id = item.DepartmentId });
                <span> | </span>
                @Html.ActionLink("Delete", "Delete", new { id = item.DepartmentId })
            }
            else
            {
                @Html.ActionLink("Details", "Details", new { id = item.DepartmentId });
            }
        </td>
    </tr>
}

</table>
